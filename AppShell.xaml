<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:MabeApp.Views"
       x:Class="MabeApp.AppShell">

    <!-- Rutas Principales -->
    <ShellContent Route="Login" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="MainView" ContentTemplate="{DataTemplate views:MainView}" />
    <ShellContent Route="ProductView" ContentTemplate="{DataTemplate views:ProductView}" />
    <ShellContent Route="DetailsView" ContentTemplate="{DataTemplate views:DetailsView}" />
</Shell>